c = float(input("Ingrese el capital: "))
i = float(input("Ingrese la tasa de interes: "))
m = int(input("Ingrese el numero de años que desea calcular: "))
while m <= 0:
    print("El numero de años debe ser mayor que 0")
    m = int(input("Ingrese el numero de años que desea calcular: "))

tasa = i / 100
capital = c

for año in range(1, m + 1):
    capital = capital * (1 + tasa)
    print("Año", año, "- Capital:", round(capital, 2))

print("Capital final después de", m, "años:", round(capital, 2))
